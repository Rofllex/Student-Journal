<Window x:Class="KIRTStudentJournal.DesktopCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KIRTStudentJournal.DesktopCore"
        xmlns:pages="clr-namespace:KIRTStudentJournal.DesktopCore.Pages"
        xmlns:viewModels="clr-namespace:KIRTStudentJournal.DesktopCore.ViewModels"
        mc:Ignorable="d"
        Title="Электронный дневник" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="30" />-->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="leftSlideMenuColumn" Width="20" />
            <ColumnDefinition  Width="1*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Height="20" Width="15">></Button>

        <Frame x:Name="frame" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
