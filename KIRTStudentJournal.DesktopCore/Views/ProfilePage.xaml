<Page x:Class="KIRTStudentJournal.DesktopCore.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KIRTStudentJournal.DesktopCore.Views"
      xmlns:viewModels="clr-namespace:KIRTStudentJournal.DesktopCore.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">
    <Page.DataContext>
        <viewModels:PageProfileViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Label Content="{Binding Path=PageProfileModel.Role}" ContentStringFormat="Роль: {0}" />
        </StackPanel>
    </Grid>
</Page>
